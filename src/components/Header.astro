---
import type { NavItem } from "../data/nav";
import { withBase } from "../utils/url";
const { navItems, currentPath } = Astro.props as {
  navItems: NavItem[];
  currentPath: string;
};

const isActive = (path: string) => currentPath.startsWith(path);
---
<header class="bg-white shadow-sm">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a href={withBase("/")} class="text-xl font-bold text-brand-blue">Young Ji International School</a>
    <nav aria-label="Main navigation">
      <ul class="flex flex-wrap gap-4 text-sm font-medium">
        {navItems.map((item) => (
          <li>
            <a
              href={withBase(item.path)}
              class={`rounded px-3 py-2 transition-colors ${
                isActive(item.path)
                  ? "bg-brand-blue text-white"
                  : "text-slate-700 hover:bg-brand-blue/10"
              }`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
